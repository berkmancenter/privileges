<% content_for :header do %>Events<% end %>

<div class="events collection-list">	
  <% unless @events.blank? %>
	<p>
	  <% @events.each do |event| %>
	    <%= event.name %> <%= event.canceled ? "(CANCELED)" : "" %>
		<%= link_to('View', event_path(event)) %>
		<% if current_user.try(:admin?) %>
		  <%= link_to('Edit', edit_event_path(event)) %>
		  <%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %>
		<% end %>
		<br />
	  <% end %>
	</p>
  <% else %>
	<h2>No events yet.</h2>
  <% end %>

  <p>
	<%= link_to('New Event', new_event_path) %>
  </p>
</div>
